      <h2><%= pluralize(mentor.errors.count, "error") %> prohibited this mentor from being saved:</h2>

      <ul>
      <% mentor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
    
  <div class="field" style="text-align: center; border-radius: 25px">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, :size=>"50%", id: :mentor_first_name %>
  </div>

  <div class="field" style="text-align: center">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, :size=>"50%", id: :mentor_last_name %>
  </div>

  <div class="field" style="text-align: center">
    <%= form.label :email %>
    <%= form.text_field :email, :size=>"50%", id: :mentor_email %>
  </div>


  <div class="field" style="text-align: center">
    <%= form.label :skills %>
    <%= form.text_area :skills, :rows => "4", :cols => "50", id: :mentor_skills %>
  </div>
    
</div>

  <div class="actions" style="text-align: center; margin-top: 40px;">
    <%= form.submit %>
  </div>
<% end %>
